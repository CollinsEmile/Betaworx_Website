---
// Contact.astro - Steel Company Contact Section
---

<section id="contact" class="py-16 md:py-24 bg-gray-50 snap-start snap-always scroll-mt-40">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        Get Your <span class="text-gunmetal">Free Quote</span>
      </h2>
      <p class="font-body text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Ready to start your steel project? Contact our expert team for a free consultation and detailed quote tailored to your specific requirements.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
      
      <!-- Contact Form -->
      <div class="bg-white rounded-2xl p-8 md:p-12 shadow-lg">
        <h3 class="font-heading text-2xl font-bold text-gray-900 mb-6">
          Request Your Quote
        </h3>
        
        <form class="space-y-6" id="contact-form">
          
          <!-- Name Fields Row -->
          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label for="firstName" class="block font-body text-sm font-semibold text-gray-700 mb-2">
                First Name *
              </label>
              <input 
                type="text" 
                id="firstName" 
                name="firstName" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg font-body focus:ring-2 focus:ring-gunmetal focus:border-gunmetal transition-colors"
                placeholder="Your first name"
              />
            </div>
            <div>
              <label for="lastName" class="block font-body text-sm font-semibold text-gray-700 mb-2">
                Last Name *
              </label>
              <input 
                type="text" 
                id="lastName" 
                name="lastName" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg font-body focus:ring-2 focus:ring-gunmetal focus:border-gunmetal transition-colors"
                placeholder="Your last name"
              />
            </div>
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block font-body text-sm font-semibold text-gray-700 mb-2">
              Email Address *
            </label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg font-body focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              placeholder="your.email@example.com"
            />
          </div>

          <!-- Phone -->
          <div>
            <label for="phone" class="block font-body text-sm font-semibold text-gray-700 mb-2">
              Phone Number *
            </label>
            <input 
              type="tel" 
              id="phone" 
              name="phone" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg font-body focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              placeholder="+27 (0)xx xxx xxxx"
            />
          </div>

          <!-- Project Type -->
          <div>
            <label for="projectType" class="block font-body text-sm font-semibold text-gray-700 mb-2">
              Project Type *
            </label>
            <select 
              id="projectType" 
              name="projectType" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg font-body focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
            >
              <option value="">Select your project type</option>
              <option value="residential">Residential Steel Work</option>
              <option value="commercial">Commercial Construction</option>
              <option value="structural">Structural Steel Framework</option>
              <option value="architectural">Architectural Metalwork</option>
              <option value="custom">Custom Fabrication</option>
              <option value="maintenance">Maintenance & Repair</option>
              <option value="consultation">Design Consultation</option>
              <option value="other">Other (Please specify in message)</option>
            </select>
          </div>

          <!-- Budget Range -->
          <div>
            <label for="budget" class="block font-body text-sm font-semibold text-gray-700 mb-2">
              Estimated Budget Range
            </label>
            <select 
              id="budget" 
              name="budget"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg font-body focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
            >
              <option value="">Select budget range (optional)</option>
              <option value="under-50k">Under R50,000</option>
              <option value="50k-100k">R50,000 - R100,000</option>
              <option value="100k-250k">R100,000 - R250,000</option>
              <option value="250k-500k">R250,000 - R500,000</option>
              <option value="500k-1m">R500,000 - R1,000,000</option>
              <option value="over-1m">Over R1,000,000</option>
              <option value="discuss">Prefer to discuss</option>
            </select>
          </div>

          <!-- Timeline -->
          <div>
            <label for="timeline" class="block font-body text-sm font-semibold text-gray-700 mb-2">
              Project Timeline
            </label>
            <select 
              id="timeline" 
              name="timeline"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg font-body focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
            >
              <option value="">When do you need this completed?</option>
              <option value="asap">As soon as possible</option>
              <option value="1-month">Within 1 month</option>
              <option value="1-3-months">1-3 months</option>
              <option value="3-6-months">3-6 months</option>
              <option value="6-12-months">6-12 months</option>
              <option value="planning">Still in planning phase</option>
            </select>
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block font-body text-sm font-semibold text-gray-700 mb-2">
              Project Details *
            </label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg font-body focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-vertical"
              placeholder="Please describe your steel project requirements, including dimensions, location, specific needs, and any other relevant details..."
            ></textarea>
          </div>

          <!-- Consent Checkbox -->
          <div class="flex items-start">
            <input 
              type="checkbox" 
              id="consent" 
              name="consent" 
              required
              class="mt-1 h-4 w-4 text-gunmetal focus:ring-gunmetal border-gray-300 rounded"
            />
            <label for="consent" class="ml-3 font-body text-sm text-gray-600 leading-relaxed">
              I consent to being contacted regarding my steel project inquiry and understand that my information will be used in accordance with your privacy policy. *
            </label>
          </div>

          <!-- Submit Button -->
          <button 
            type="submit" 
            class="w-full bg-gunmetal text-white py-4 px-8 rounded-lg font-body font-semibold text-lg hover:bg-dark-gunmetal focus:ring-4 focus:ring-gunmetal focus:ring-opacity-50 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
          >
            Send My Quote Request
          </button>

          <!-- Form Success/Error Messages -->
          <div id="form-message" class="hidden p-4 rounded-lg"></div>
        </form>
